@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/content/css/layui.css" media="all">
    <!-- 注意：如果你直接复制所有代码到本地，上述css路径需要改成你本地的 -->
</head>
<body style="margin:20px;">
    <form class="layui-form" action="">
        <div class="layui-form-item">
            <label class="layui-form-label">旧密码</label>
            <div class="layui-input-block">
                <input type="text" name="VillageName" value="" lay-verify="required" autocomplete="off" placeholder="请输入村庄" class="layui-input">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">新密码</label>
            <div class="layui-input-block">
                <input type="text" name="VillageName" value="" lay-verify="required" autocomplete="off" placeholder="请输入村庄" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">确认密码</label>
            <div class="layui-input-block">
                <input type="text" name="VillageName" value="" lay-verify="required" autocomplete="off" placeholder="请输入村庄" class="layui-input">
            </div>
        </div>
       
    </form>
    <script src="/scripts/jquery-1.10.2.min.js" charset="utf-8"></script>
    <script src="/content/layui.js" charset="utf-8"></script>

    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
    <script>
        layui.use(['form', 'layedit', 'laydate'], function () {
            var form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
            , laydate = layui.laydate;


            //监听提交
            form.on('submit(demo1)', function (data) {
                if (data.field.Id > 0) {
                    $.post("/admin/ChangePassword", data.field, function (data) {
                        if (data && data.code == 0) {
                            layer.alert("修改成功", { title: '提示' }, function () {
                                window.parent.location.reload();
                            })
                        } else {
                            layer.alert(data.msg, { title: '提示' })
                        }
                    })
                    return false;
                }
                //layer.alert(JSON.stringify(data.field), {
                //  title: '最终的提交信息'
                //})
                return false;
            });


        });
        $(function () {
            $.ajaxSetup({ cache: false });
        })
    </script>
</body>
</html>